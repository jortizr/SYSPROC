{# templates/gestion_humana/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Registros Biometricos{% endblock %}

{% block body %}
    <h1>Cargar Archivo Excel</h1>

    {# Formulario para cargar el archivo Excel #}
    <form action="{{ path('app_biometrico') }}" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="excel_file" class="form-label">Seleccione un archivo Excel:</label>
            <input type="file" name="excel_file" id="excel_file" class="form-control" required>
        </div>
        <button type="submit" class="btn btn-primary">Cargar</button>
    </form>

    {# Previsualizaci칩n de los datos, si est치n presentes #}
    {% if sheetData is defined %}
        <h2 class="mt-5">Previsualizaci칩n de Datos</h2>
        <table class="table table-striped mt-3">
            <thead>
                <tr>
                    {% for header in sheetData[0] %}
                        <th>{{ header }}</th>
                    {% endfor %}
                </tr>
            </thead>
            <tbody>
                {% for row in sheetData %}
                    <tr>
                        {% for cell in row %}
                            <td>{{ cell }}</td>
                        {% endfor %}
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        {# Bot칩n para guardar los datos en la base de datos #}
        <form action="{{ path('guardar_datos') }}" method="post">
            <button type="submit" class="btn btn-success">Guardar en Base de Datos</button>
        </form>
    {% endif %}
{% endblock %}
