<div class="col">
	<div class="card w-auto mb-4 h-auto shadow-sm p-3 mb-4 bg-body-tertiary rounded" style="z-index: 1;">
		<div class="card-body w-100">
			<div class="position-relative mb-3">
				<h5 class="card-title text-center">{{schedule.name}}</h5>

				<div class="position-absolute top-0 end-0 d-flex gap-1">
					<!-- Botón de editar -->
					<form action="{{ path('app_schedule_edit', { id: schedule.id}) }}" method="post">
                    	<input type="hidden" name="token" value="{{ csrf_token('update-item') }}">
						<button class="btn btn-outline-secondary">
							<i class="bi bi-pencil-square"></i>
						</button>
                	</form>
					<!-- Botón de eliminar -->
				{# boton de eliminar el cual activa el modal de confirmacion y como parametro le pasa el id del schedule
				a traves de data-bs-toggle llama al modal con el id y data-bs-target pasa el parametro al modal #}
				<!-- Contenedor para agrupar los botones -->
					<button class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal-{{ schedule.id }}">
						<i class="bi bi-trash"></i>
					</button>
				</div>
			</div>
			<div class="row">
				<div class="col-md-6">
					<p>
						<strong>Entrada:</strong>
						{{ schedule.getTimeStart ? schedule.getTimeStart|date('h:i a') : 'N/A' }}</p>
				</div>
				<div class="col-md-6">
					<p>
						<strong>Salida:</strong>
						{{schedule.getTimeEnd ? schedule.getTimeEnd|date('h:i a') : 'N/A' }}</p>
				</div>
			</div>
			<div class="row">
				<div class="col-md-6">
					<p>
						<strong>Entrada 2:</strong>
						{{schedule.getTime2Start ? schedule.getTime2Start|date('h:i a') : 'N/A' }}</p>
				</div>
				<div class="col-md-6">
					<p>
						<strong>Salida 2:</strong>
						{{schedule.getTime2End ? schedule.getTime2End|date('h:i a') : 'N/A' }}</p>
				</div>
			</div>
			<div class="row">
				<div class="col-md-6">
					<p>
						<strong>Entrada sab/dom:</strong>
						{{schedule.getWeekendTimeStart ? schedule.getWeekendTimeStart|date('h:i a') : 'N/A' }}</p>
				</div>
				<div class="col-md-6">
					<p>
						<strong>Salida sab/dom:</strong>
						{{schedule.getWeekendTimeEnd ? schedule.getWeekendTimeEnd|date('h:i a') : 'N/A' }}</p>
				</div>
			</div>
			<div class="row">
				<div class="col-md-6">
					<p>
						<strong>Entrada 2 sab/dom:</strong>
						{{schedule.getWeekendTime2Start ? schedule.getWeekendTime2Start|date('h:i a') : 'N/A' }}</p>
				</div>
				<div class="col-md-6">
					<p>
						<strong>Salida 2 sab/dom:</strong>
						{{schedule.getWeekendTime2End ? schedule.getWeekendTime2End|date('h:i a') : 'N/A' }}</p>
				</div>
			</div>
		</div>
		<div class="text-start">
			<p class="text-muted">
				<strong>Fecha creacion:</strong>
				{{ schedule.ModDate ? schedule.ModDate|date('Y-m-d H:i') : 'N/A' }}</p>
		</div>
	</div>
</div>
